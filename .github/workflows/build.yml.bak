name: GDX-Liftoff Build

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build-and-upload:
    name: Build All Platforms & Debug
    runs-on: ubuntu-latest

    steps:
      # =========================================================
      # 1️⃣ PREPARAÇÃO
      # =========================================================
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Java 17 (Temurin)
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: 17
          cache: gradle

      - name: Setup Android SDK
        uses: android-actions/setup-android@v3

      - name: Ensure Gradle Wrapper executable
        run: chmod +x ./gradlew

      # =========================================================
      # 2️⃣ COMPILAÇÃO (Onde a mágica acontece)
      # =========================================================
      - name: Build All Modules
        run: |
          ./gradlew :core:build
          ./gradlew :android:assembleDebug
          ./gradlew :lwjgl3:build
          ./gradlew :ios:build || true # Farpada no iOS ignorada com sucesso

      # =========================================================
      # 3️⃣ ARTEFATOS DOS APPS (O que você quer rodar)
      # =========================================================
      - name: Artifact - Android APK
        uses: actions/upload-artifact@v4
        with:
          name: bin-android-apk
          path: android/build/outputs/apk/debug/*.apk

      - name: Artifact - Desktop JAR
        uses: actions/upload-artifact@v4
        with:
          name: bin-lwjgl3-jar
          path: lwjgl3/build/libs/*.jar

      - name: Artifact - Core JAR
        uses: actions/upload-artifact@v4
        with:
          name: bin-core-jar
          path: core/build/libs/*.jar

      # =========================================================
      # 4️⃣ DEPURAÇÃO ESPECÍFICA (O que você quer analisar)
      # =========================================================
      
      - name: Debug - Root Directory (Full)
        uses: actions/upload-artifact@v4
        with:
          name: debug-root-full
          path: ./*
          include-hidden-files: true

      - name: Debug - Android Folder
        uses: actions/upload-artifact@v4
        with:
          name: debug-android-folder
          path: android/*

      - name: Debug - LWJGL3 Folder
        uses: actions/upload-artifact@v4
        with:
          name: debug-lwjgl3-folder
          path: lwjgl3/*

      - name: Debug - iOS Folder
        uses: actions/upload-artifact@v4
        with:
          name: debug-ios-folder
          path: ios/*

      - name: Debug - Core Folder
        uses: actions/upload-artifact@v4
        with:
          name: debug-core-folder
          path: core/*
